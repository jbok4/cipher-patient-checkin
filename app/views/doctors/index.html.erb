<p id="notice"><%= notice %></p>

<h1>Which doctor is your appt with today?</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td class="thumbnail"><img src="<%= doctor.image %>" height="100" width="100"></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%#= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%#= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

